{
  "name": "imgrab",
  "description": "Send images to imgrab",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "http://*/*",
    "https://*/*",
    "http://127.0.0.1:5000/",
    "http://localhost:5000/"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Send to imgrab"
  },
  "manifest_version": 2
}
